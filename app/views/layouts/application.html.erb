<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <link rel="stylesheet" type="text/css" href="http://localhost:8000/css/app.css">
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% if notice %>
      <div class="notice">
        <p><%= notice %></p>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert">
        <p><%= alert %></p>
      </div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
